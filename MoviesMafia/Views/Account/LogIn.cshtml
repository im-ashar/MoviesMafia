@model MoviesMafia.Models.Repo.UserLogInModel
@section styleforsignup{
    <link rel="stylesheet" href="~/css/movies.css">
    <style>
        main {
            margin-top: auto;
        }
    </style>

}
@{
    ViewBag.Title = "Log In";
}
<div class="container">
    <div class="row mt-5">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class=" card-body bg-dark p-4 p-sm-5">
                    <img width="100%" src="~/MoviesMafia.png" alt="">
                    <h5 class="card-title text-center mb-3 fw-light fs-5 text-white">Log In</h5>
                    <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-floating mb-3 form-group">
                            <input asp-for="Username"
                                   class="form-control"
                                   placeholder="Username"
                                   id="floatingInput" />
                            <label asp-for="Username" class="form-label"></label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 form-group">
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="Password"
                                   id="exampleInputPassword1" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-danger btn-login text-uppercase fw-bold"
                                    type="submit" >
                                Log In
                            </button>
                        </div>
                    </form>
                    <p class="text-light text-center m-2">Or<a class="text-light m-2" href="~/Account/SignUp">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>