@model MoviesMafia.Models.Repo.UserSignUpModel
@section styleforsignup{
    <link rel="stylesheet" href="~/css/movies.css">
    <style>
        main {
            margin-top: auto;
        }
    </style>

}
@{
    ViewBag.Title = "Sign Up";
}
<div class="container">
    <div class="row mt-5">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card border-0 shadow rounded-3 my-5">
                <div class=" card-body bg-dark p-4 p-sm-5">
                    <img width="100%" src="~/MoviesMafia.png" alt="">
                    <h5 class="card-title text-center mb-3 fw-light fs-5 text-white">Sign Up</h5>
                    <div asp-validation-summary="All" class="text-danger"></div>
                   
                    <form method="post" asp-action="SignUp">
                        <div class="form-floating mb-3 form-group ">
                            <input asp-for="Username"
                                   class="form-control"
                                   placeholder="Username"
                                   id="floatingInput" />
                            <label asp-for="Username" class="form-label"></label>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>


                        <div class="form-floating mb-3 form-group">
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="Email"
                                   id="email" />
                            <label asp-for="Email" class="form-label"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 form-group">
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="Password"
                                   id="exampleInputPassword1" />
                            <label asp-for="Password" class="form-label"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3 form-group">
                            <input asp-for="ConfirmPassword"
                                   class="form-control"
                                   placeholder="ConfirmPassword"
                                   id="exampleInputPassword2" />
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-danger btn-login text-uppercase fw-bold"
                                    type="submit">
                                Sign Up
                            </button>
                        </div>
                    </form>

                    <p class="text-light text-center m-2">Already have an account?<a class="text-light m-2" href="~/Account/LogIn">Log In</a></p>
                </div>
            </div>
        </div>
    </div>
</div>