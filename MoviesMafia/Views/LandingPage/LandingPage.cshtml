@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - MoviesMafia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/landingpage.css" asp-append-version="true" />
</head>
<body>
    <div id="Welcome"
         class="container d-flex align-items-center min-vh-100 flex-column text-center justify-content-center">
        <div class="row">
            <div class="col">
                <h1>Welcome to MoviesMafia</h1>
                @if (!User.Identity.IsAuthenticated)
                {
                    <h5>To Play Videos You Need To Sign Up</h5>
                }
            </div>
        </div>
        <div class="row">
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="col">
                    <a class="btn btn-danger" href="~/Account/LogIn" role="button">Login</a>
                </div>
                <div class="col">
                    <a class="btn btn-danger" href="~/Account/SignUp" role="button">Sign Up</a>
                </div>
            }
        </div>

        <div class="col-12">
            <a class="btn btn-danger m-2" href="~/Movies/Movies" role="button">Movies</a>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
</body>
</html>
