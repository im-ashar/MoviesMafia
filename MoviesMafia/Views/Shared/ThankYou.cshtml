@{
    Layout = null;
    ViewBag.Title = "Thank You";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
          crossorigin="anonymous" />
    <title>Thank You</title>
</head>
<body class="bg-dark" style="height: 100vh; width: 100vw">
    <div class="container d-flex flex-column justify-content-center align-items-center h-100">
        <h1 class="display-3 text-light text-center">@Model</h1>
        @if (Model == "EmailConfirmed")
        {
            <p class="lead">
                <a class="btn btn-danger btn-sm" href="~/Account/LogIn" role="button">Log In</a>
            </p>
        }
        else
        {
            <h1 class="display-3 text-light">Thank You!</h1>
            <p class="lead">
                <a class="btn btn-danger btn-sm" href="~/Movies/Movies" role="button">Continue to Homepage</a>
            </p>
        }

    </div>
</body>
</html>
