<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - MoviesMafia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    @RenderSection("aboutuscss",false)
    @RenderSection("styleforsignup",false)
    @RenderSection("moviescss",false)
    @RenderSection("profilecss",false)
    @RenderSection("playnowcss",false)
    <style>
        body{
            display:flex;
            flex-direction:column;
            min-height:100vh;
        }
        main{
            flex:1;
        }
    </style>

</head>
<body>
    <header id="header">
        <partial name="_Navigation.cshtml">
    </header>

    <main id="main">
        @RenderBody()
    </main>

    <footer class="d-flex align-items-center flex-wrap justify-content-around bg-dark">
        <div class="col-12 d-inline-flex justify-content-center">
            <a href="landingpage.html" class="text-light text-center">MoviesMafia</a>
        </div>

        <div class="col-12 d-inline-flex justify-content-center bottom-list">
            <a href="~/Movies/Movies" class="p-3 text-light">Movies</a>
            <a href="~/Movies/Movies" class="p-3 text-light">Seasons</a>
            <a href="~/Account/SignUp" class="p-3 text-light">Sign Up</a>
            <a href="~/AboutUs/AboutUs" class="p-3 text-light">About Us</a>
        </div>
        <div class="col-12">
            <p class="text-light text-center"><b>© 2023 Copyright: MoviesMafia</b></p>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.6.3.js" integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <base href="~/" />
    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
